<link rel="stylesheet" href="/css/index.style.css" />
<script defer type="module" src="/js/cart.js"></script>

<header class="header">
  <a href="/products" class="a_header__logo">
    <img class="header__logo" src="/img/logo.jpg" alt="Logotipo" />
  </a>

</header>

<br /><br />

<div class="contenedorCheckOut">
  <button class="button" key="" data-cart-id="{{cartID}}" id="btn-vaciar">
    Vaciar carrito
  </button>
  {{#each products}}
    <div key="{{this.product._id}}" class="listado">
      <img
        class="producto__imagen"
        src="{{this.product.img}}"
        alt="foto de {{this.product.title}}"
        height="200"
        width="200px"
      />
      <div class="checkout--info-btn">
        <div class="checkout--listado--info">
          <h3>{{this.product.title}}</h3>
          <h3>{{this.product.price}}</h3>
          <p>Cantidad: {{this.quantity}}</p>
        </div>
        <a class="boton-eliminar">
          ⛔️
        </a>
      </div>
    </div>
  {{/each}}

</div>
<div class="total--compra">
  <p>Total: {{total}}</p>
</div>
<form action="" class="form--compra">
  <button type="button" class="button">
    Comprar
  </button>

  <div class="form--div">
    <h2>Finalizar compra</h2>
    <div>
      <input
        placeholder=""
        class="form--input"
        required
        value=""
        name="name"
        type="text"
        onChange="{handleChange}"
      />
      <label class="form--label">Nombre:</label>
    </div>
    <div>
      <input
        placeholder=""
        class="form--input"
        required
        value=""
        name="email"
        type="email"
        onChange="{handleChange}"
      />
      <label class="form--label">Email:</label>
    </div>
    <div>
      <input
        placeholder=""
        class="form--input"
        required
        value=""
        name="phone"
        type="tel"
        onChange="{handleChange}"
      />
      <label class="form--label">Telefono:</label>
    </div>
    <button type="button" id="btn-purchase" class="btnComprar button">
      Finalizar compra
    </button>
  </div>
</form>